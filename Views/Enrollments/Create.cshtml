@model StudentPortal.Models.Enrollment

<h1>Create Enrollment</h1>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label"></label>
        <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select">
            <option value="">-- выберите студента --</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CourseId" class="form-label"></label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select">
            <option value="">-- выберите курс --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Grade" class="form-label"></label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
