@model StudentPortal.Models.Enrollment
@{
    ViewData["Title"] = "Delete Enrollment";
}
<h1>Delete Enrollment</h1>
<h3>Are you sure you want to delete this enrollment?</h3>
<dl class="row">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student.FirstName @Model.Student.LastName</dd>
    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course.Title</dd>
    <dt class="col-sm-2">Grade</dt>
    <dd class="col-sm-10">@((Model.Grade.HasValue) ? Model.Grade.ToString() : "-")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EnrollmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
