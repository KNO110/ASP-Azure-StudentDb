@model StudentPortal.Models.Enrollment
@{
    ViewData["Title"] = "Edit Enrollment";
}
<h1>Edit Enrollment</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EnrollmentId" />
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Student</label>
        <select asp-for="StudentId" class="form-select" asp-items="ViewBag.Students"></select>
    </div>
    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">Course</label>
        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Grade" class="form-label"></label>
        <input asp-for="Grade" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
